{
  "name": "monochromatic-base",
  "appPort": ["5173:5173/tcp", "5173:5173/udp"],
  "image": "opensuse/tumbleweed",
  "containerEnv": {
    "SHELL": "/bin/bash",
  },
  "build": {
    "options": [
      "--label",
      "org.opencontainers.image.source=https://github.com/Aquaticat/monochromatic-devcontainer",
      "--label",
      "org.opencontainers.image.description=Monochromatic Devcontainer base",
      "--label",
      "org.opencontainers.image.licenses=Apache-2.0"
    ]
  },
  "onCreateCommand": "echo '\nrepo.refresh.delay=100\ndownload.max_concurrent_connections=16\n' >> /etc/zypp/zypp.conf && zypper in -y which awk && chmod +x ./pnpm-install.sh && ./pnpm-install.sh && ln -sf bash /bin/sh && chsh -s /bin/bash && source ~/.bashrc && pnpm env use --global iron && pnpm i -g zx && pnpm i --force && zx ./src/index.js",
  "customizations": {
    "vscode": {
      "settings": {
        "dprint.experimentalLsp": true,
        "typescript.preferences.preferTypeOnlyAutoImports": true,
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml",
        },
        "[astro]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[vue]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[css]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[html]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[toml]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[js]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[ts]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[mjs]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[mts]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[cjs]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[cts]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[javascript]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[typescript]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[javascriptreact]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "dprint.dprint",
        },
        "[json]": {
          "editor.defaultFormatter": "biomejs.biome",
        },
        "[jsonc]": {
          "editor.defaultFormatter": "biomejs.biome",
        },
        "todo-tree.general.enableFileWatcher": true,
        "todo-tree.general.revealBehaviour": "end of todo",
        "todo-tree.general.tags": [
          "BUG",
          "HACK",
          "FIXME",
          "TODO",
          "XXX",
          "[ ]",
          "[x]",
          "DONE",
          "FIXED",
          "MAYBE",
          "INVALID",
          "WONTFIX",
          "UPDATE",
          "DOING",
        ],
        "todo-tree.filtering.ignoreGitSubmodules": true,
        "todo-tree.regex.enableMultiLine": true,
        "todo-tree.highlights.defaultHighlight": {
          "textDecoration": "underline",
        },
      },
      "extensions": [
        "biomejs.biome",
        "EditorConfig.EditorConfig",
        "tamasfe.even-better-toml",
        "unifiedjs.vscode-mdx",
        "ms-playwright.playwright",
        "redhat.vscode-yaml",
        "dprint.dprint",
        "ms-vscode-remote.remote-containers",
        "Gruntfuggly.todo-tree",
        "Vue.volar",
        "ms-azuretools.vscode-docker",
      ],
    },
  },
}
